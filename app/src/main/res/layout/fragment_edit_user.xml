<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="400dp"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="148dp"
        android:hint="USERNAME"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_save_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FA4863"
        android:text="SAVE USERNAME"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/txt_edit_user"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/txt_edit_user"
        app:layout_constraintTop_toBottomOf="@+id/txt_edit_user" />


</androidx.constraintlayout.widget.ConstraintLayout>